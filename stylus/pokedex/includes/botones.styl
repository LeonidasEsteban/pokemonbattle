
.Btn
    border 1px solid black
    box-shadow -2px 2px 0 rgba(white,.5)
    cursor pointer
    display inline-block
    vertical-align top
    &:active
        transform scale(.9)
    &.is-animated
        animation .3s isAnimated infinite
    &--red 
        background red
    &--blue
        background azul
    &--yellow
        background amarillo
    &--green
        background verde
    &--coral
        background coral
    &--orange
        background orange
    &--small
        width 20px
        height 20px
    &--large
        width 70px
        height 20px
    &--medium
        width 35px
        height 35px
    &--big
        width 50px
        height 50px
    &--rounded
        border-radius 50%
    &--round
        border-radius radius

@keyframes isAnimated
    0%
        background white
    50%
        background #05FBFB
    100%
        background white