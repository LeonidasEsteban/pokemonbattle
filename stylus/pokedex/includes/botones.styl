@keyframes opacity
    0%
        // opacity .5
    50%
        opacity 1
        transform scale(1.1)
    100%
        // opacity .5

.Btn
    border 1px solid black
    box-shadow -2px 2px 0 rgba(white,.5)
    cursor pointer
    display inline-block
    vertical-align top
    &:active
        transform scale(.9)
    &.is-animated
        animation .3s isAnimated infinite
    &--gift
        background red
        color white
        text-decoration none
        padding 1em 
        font-size .5em
        border none
        // border-bottom 2px solid white
        animation 1s opacity infinite
        box-shadow 0 0 10px red
        &:active
            transform scale(.9)
    &--tryAgain
        background azul
        color white
        padding 1em 
        font-size .5em
        border none
        border-bottom 2px solid white
        &:active
            transform scale(.9)
    &--red 
        background red
    &--blue
        background azul
    &--yellow
        background amarillo
    &--green
        background verde
    &--coral
        background coral
    &--orange
        background orange
    &--small
        width 20px
        height 20px
    &--large
        width 70px
        height 20px
    &--medium
        width 35px
        height 35px
    &--big
        width 50px
        height 50px
    &--rounded
        border-radius 50%
    &--round
        border-radius radius

@keyframes isAnimated
    0%
        background white
    50%
        background #05FBFB
    100%
        background white