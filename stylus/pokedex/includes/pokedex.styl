.Pokedex
    margin 100px auto 0
    perspective 1000px
    position relative
    width 400px
    background rojo
    border-radius 10px 0 0 10px
    font-family "Source Code Pro", monospace
    &:after
        @extends .u-clearfix
    &:hover
    &.is-active
        .Pokedex-rightFrontface
            transform rotateY(0)
        .Pokedex-rightBackface
            transform rotateY(180deg)
    &-window
        margin 20px
        border-radius 10px 10px 0 0
        background #B0B0B0
        padding 15px
        border 1px solid black

    &-sprite
        background white
        border-radius radius
        background-position center
        background-repeat no-repeat
        height 150px
        border 2px solid black
        &.is-fullSize
            background-size 100%
    &-search
        margin 20px 0
        input
            background orange
            border none
            border 1px solid black
            border-radius radius
            color black
            font-size 20px
            outline 0
            padding 10px
            &:focus
                border 1px solid black
            &::-webkit-input-placeholder
                color white
    &-description
        background #30FA04
        margin 20px
        padding 20px
        border-radius radius
        border 2px solid black
    &-left
        background linear-gradient(top ,rojo 80%, rgba(0,0,0, .2))
        border 1px solid black
        border-radius 10px 0 0 10px
        border-right 10px solid black
        box-sizing border-box
        float left
        height 500px
        width 400px
    &-leftTop
        padding 10px 20px
    &-leftBottom
        padding 10px 20px
    &-rightFrontface
        absolute(0,0,0px,100%)
        backface-visibility hidden
        background rojo
        border 1px solid black
        border-left 0
        border-radius 0 10px 10px 0
        box-shadow 0 0 10px rgba(black,.3)
        box-sizing border-box
        float right
        height 400px
        transform rotateY(-180deg)
        transform-origin left top
        transition 1s transform
        width 400px
    &-rightFrontfaceTop
        &:before
            triangulo('left', rojo, 80px, 60px, 0, 80px)
            absolute(0, 0, 100%, 0px)
            margin-left 200px

        &:after
            absolute(0, 0, 100%, 0px)
            background rojo
            border-top 1px solid black
            content ""
            height 80px
            width 200px
    &-rightFrontfaceBottom
        border-radius radius
        font-size 0
        margin 0 50px

    &-rightBackface
        absolute(0, 0, 0px, 0px)
        backface-visibility hidden
        background rojo
        border 1px solid black
        border-left 8px solid rgba(black,.3)
        border-radius 0 0 0 10px
        box-shadow 0 0 10px rgba(black,.3)
        box-sizing border-box
        float right
        height 400px
        transform rotateY(0)
        transform-origin right top
        transition 1s transform
        width 400px

        
        &:after
            triangulo('left', amarillo, 25px, 25px, 25px, 25px)
            absolute(50%, 0, 0, 0px)
            display block
            margin 0 auto
            margin-top -25px

    &-rightBackfaceTop
        absolute(0, 0px, 100%, 0)
        background rojo
        border-top 1px solid black
        content ""
        height 80px
        width 200px
        &:before
            triangulo('right', rojo, 80px, 60px, 0, 0)
            absolute(0px, 0px, 0, 0)
            margin-right 200px
        &:after
            absolute(0px, 0, 0, 0px)
            background black
            content ""
            height 100px
            transform rotate(37deg)
            transform-origin left top
            width 0.5px