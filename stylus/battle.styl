rojo     = #DD092F
amarillo = #FFCC00
verde    = #30FA04
coral    = #05FBFB
azul     = #509BFB

radius   = 10px

html
body
    margin 0
    height 100%
    background  url('../images/launch2.gif') //linear-gradient(top, rojo 440px,400px white) //rojo //black
    background-size cover
    font-family: 'Orbitron', sans-serif;

@import "pokedex/includes/mixins.styl"
